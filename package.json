{
    "name":                              "tokenizr",
    "description":                       "String Tokenization Library for JavaScript",
    "keywords":                          [ "string", "token", "scanner", "lexer" ],
    "homepage":                          "https://github.com/rse/tokenizr",
    "repository":                        { "url": "git+https://github.com/rse/tokenizr.git", "type": "git" },
    "bugs":                              { "url": "http://github.com/rse/tokenizr/issues" },
    "version":                           "2.0.2",
    "license":                           "MIT",
    "author": {
        "name":                          "Dr. Ralf S. Engelschall",
        "email":                         "rse@engelschall.com",
        "url":                           "http://engelschall.com"
    },
    "types":                             "./dst/tokenizr.d.ts",
    "module":                            "./dst/tokenizr.esm.js",
    "main":                              "./dst/tokenizr.cjs.js",
    "browser":                           "./dst/tokenizr.umd.js",
    "exports": {
        ".": {
            "import":                    { "types": "./dst/tokenizr.d.ts", "default": "./dst/tokenizr.esm.js" },
            "require":                   { "types": "./dst/tokenizr.d.ts", "default": "./dst/tokenizr.cjs.js" }
        }
    },
    "devDependencies": {
        "eslint":                        "9.35.0",
        "@eslint/js":                    "9.35.0",
        "eslint-plugin-n":               "17.23.0",
        "eslint-plugin-promise":         "7.2.1",
        "eslint-plugin-import":          "2.32.0",
        "eslint-plugin-mocha":           "11.1.0",
        "eslint-plugin-chai-expect":     "3.1.0",
        "neostandard":                   "0.12.2",
        "globals":                       "16.4.0",
        "oxlint":                        "1.16.0",
        "eslint-plugin-oxlint":          "1.16.0",
        "@biomejs/biome":                "2.0.6",
        "eslint-config-biome":           "2.1.3",

        "vite":                          "7.1.5",
        "vite-plugin-singlefile":        "2.3.0",
        "vite-plugin-node-polyfills":    "0.24.0",
        "@wroud/vite-plugin-tsc":        "0.12.1",
        "typescript":                    "5.9.2",
        "tsx":                           "4.20.5",
        "jiti":                          "2.5.1",
        "mocha":                         "11.7.2",
        "chai":                          "6.0.1",
        "chai-as-promised":              "8.0.2",
        "sinon-chai":                    "4.0.1",
        "sinon":                         "21.0.0",

        "@rse/stx":                      "1.1.1",
        "nodemon":                       "3.1.10",
        "shx":                           "0.4.0",

        "@types/node":                   "24.5.1",
        "@types/chai":                   "5.2.2",
        "@types/mocha":                  "10.0.10",
        "@types/sinon":                  "17.0.4",
        "@types/sinon-chai":             "4.0.0",
        "@types/chai-as-promised":       "8.0.2"
    },
    "upd":                               [ "!@biomejs/biome" ],
    "scripts": {
        "start":                         "stx -c etc/stx.conf -v4",
        "test":                          "stx -c etc/stx.conf -v4 test"
    }
}
